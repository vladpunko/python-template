root = true

[*.{py,pyi}]
# See information: https://peps.python.org/pep-0008
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 88

[*.pyi]
# See information: https://typing.readthedocs.io/en/latest/guides/writing_stubs.html#style-guide
max_line_length = 130
